@using EndavaInternship.Web.Models
@model EndavaInternship.Web.Models.UserModel

@{
    ViewBag.Title = "ASP.NET Day 3";
}

<div class="jumbotron">
    <h1>Endava Internship ASP.NET Day 3</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Add new user</h2>

        @using (Html.BeginForm("Create", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.FullName)
                @Html.TextBoxFor(m => m.FullName, new {@class = "form-control"})
            </div>

            <input type="submit" class="btn btn-default" value="Create"/>
        }
    </div>
    <div class="col-md-8">
        @if ((ViewData["Users"] != null) && ((IEnumerable<UserModel>)ViewData["Users"]).Any())
        {
            <h2>Users:</h2>
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Full Name</th>
                </tr>
                </thead>
                @foreach (var user in (IEnumerable<UserModel>)ViewData["Users"])
                {
                    <tr>
                        <th>@user.UserId</th>
                        <th>@user.FullName</th>
                    </tr>
                }
            </table>
        }
    </div>
</div>